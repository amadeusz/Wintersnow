<% if @user.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@user.errors.count, "error") %> prohibited this message from being saved:</h2>

		<ul>
		<% @user.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	</div>
<% end %>

<p id="notice"><%= notice %></p>

<div class="actions karty" style="display: none; text-align: center">
	<span id="subskrypcja_tab">Twoje strony</span>
	<span id="haslo_tab">Hasła</span>
</div>

<div id="subskrypcja" style="display: none">
	<%= render 'addresses/form' %>
	<%= render 'form_subscribe' %>
</div>

