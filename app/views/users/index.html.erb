<h1>Listing users</h1>

<table>
  <tr>
    <th>Klucz</th>
    <th>Haslo</th>
    <th>Obserwowane</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.klucz %></td>
    <td><%=h user.haslo %></td>
    <td><%=h user.obserwowane %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

