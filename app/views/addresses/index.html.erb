<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Klucz</th>
    <th>Adres</th>
    <th>Data mod</th>
    <th>Data spr</th>
    <th>Opis</th>
    <th>Komunikaty</th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%=h address.klucz %></td>
    <td><%=h address.adres %></td>
    <td><%=h address.data_mod %></td>
    <td><%=h address.data_spr %></td>
    <td><%=h address.opis %></td>
    <td><%=h address.komunikaty %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New address', new_address_path %>
