<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html>
<html>
<head>
	<%= csrf_meta_tag %>
	
	<%= auto_discovery_link_tag(:rss, "/rss/of/koliber", {:title => "Koliber (komunikaty)"}) %>
	<%= auto_discovery_link_tag(:rss, "/rss/of/kot", {:title => "kot"}) %>
	<%= javascript_include_tag :defaults %>

	<%= stylesheet_link_tag ['koliber', 'tabele'] %>
	<%= favicon_link_tag 'icons/koliber.png', :type => 'image/png' %>
	<title>Koliber</title>
</head>
<%
	id = controller_name
	( id << '_' << action_name ) if params[:action] != 'index'
%>
<body id="<%= id %>"<% if controller.admin_logged_in? %> class="admin"<% else %> class="public"<% end %>>

	<div id="nawigacja">
	<% if controller.logged_in? %>
	
		<% if controller.admin_logged_in? %>
			<%= link_to 'Start', root_path %>
			<%= link_to 'Adresy', addresses_path %>
			<%= link_to 'Genotypy', genotypes_path %>
			<%= link_to 'Użytkownicy', users_path %>
			<%= link_to 'Wiadomości', messages_path %>
		<% end %>
	
		<%= link_to 'Wyloguj ('+ controller.current_user.klucz + ')', login_destroy_path %>
	<% end %>
	</div>

	<div id="tresc">
		<%= yield %>
	</div>
	
</body>
</html>

