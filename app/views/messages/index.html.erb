<p id="notice"><%= notice %></p>

<table>
	<tr>
		<th><%= image_tag 'icons/key.png', :width => 16, :height => 16 %></th>
		<th><%= image_tag 'icons/world.png', :width => 16, :height => 16 %></th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
<% @messages.each do |message| %>
	<tr>
		<td><%= link_to message.id.to_s + '.', message_path(message) %></td>
		<td><%= message.address_id.to_s + '.' %></td>
		<td><%= message.tresc.limit(100) %></td>
		<td><%= skroc_date(message.data) %></td>
		<td><%= link_to image_tag('icons/keyboard.png', :width => 16, :height => 16), edit_message_path(message) %>
			<%= link_to image_tag('icons/destroy.png', :width => 16, :height => 16), message, :confirm => 'Are you sure?', :method => :delete %></td>
	</tr>
<% end %>
</table>

